<!doctype html>
<html lang="en">

<head>
  {{>head}}
</head>

<body>
  {{>navbar}}

  <main role="main" class="container">
    <div class="jumbotron">
      <h1>Check out the Weather!!!</h1>

      <form class="form-inline mt-2 mt-md-0">
        <input class="form-control mr-sm-2 search" type="text" placeholder="Location" aria-label="Location">
        <button class="btn btn-primary my-2 my-sm-0">Search</button>
      </form>
    </div>

    <p id="loading" style="display: none;" class="lead">Loading...</p>
    <p id="location" style="display: none;" class="lead">Location: <span class="text-primary"></span></p>
    <p id="forecast" style="display: none;" class="lead">Forecast: <span class="text-success"></span></p>
    <p id="error" style="display: none;" class="lead text-danger"></p>
  </main>

  {{>footer}}

  {{>scripts}}
  <script src="/js/app.js"></script>
</body>

</html>